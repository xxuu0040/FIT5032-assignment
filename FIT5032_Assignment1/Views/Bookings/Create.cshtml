<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Room_id, "Room_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @**Html.DropDownList("Room_id", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.EditorFor(model => model.Room_id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Room_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Room.Hotel.Hotel_name, "Hotel_Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @**Html.DropDownList("Hotel_id", model => model.Hotel_id, htmlAttributes: new { @class = "form-control" })*@
