
@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Homepage</h2>
<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="https://cdn.pixabay.com/photo/2017/04/26/10/31/melbourne-2262238_960_720.jpg" alt="Melbourne city" style="width:100%;">
            <div class="carousel-caption">
                <h2>@Html.ActionLink("Get Start", "Index", "Home")</h2>
            </div>
        </div>
        <div class="item">
            <img src="https://cdn.pixabay.com/photo/2014/03/31/15/55/twelve-apostles-302024_960_720.jpg" alt="Twelve Apostles " class="img-responsive" style="width:100%;">
        </div>
        <div class="item">
            <img src="https://cdn.pixabay.com/photo/2015/12/20/11/10/australia-1100968_960_720.jpg" alt="Third slide" class="img-responsive" style="width:100%;">
            <div class="carousel-caption">

            </div>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <h2 class="text-center">Recommended Hotels</h2>
    <div class="row">
        <div class="col-md-4">
            <a href="@Url.Action("Hotel","Home")" class="btn-link">
                <img src="https://cdn.pixabay.com/photo/2018/08/14/11/03/acapulco-3605307_960_720.jpg" alt="first hotel" class="img-responsive" />
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Hotel","Home")" class="btn-link">
                <img src="https://cdn.pixabay.com/photo/2016/02/19/10/01/hotel-1209021_960_720.jpg" alt="second hotel" class=" img-responsive" />
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Hotel","Home")" class="btn-link">
                <img src="https://cdn.pixabay.com/photo/2015/01/10/11/39/hotel-595121_1280.jpg" alt="third hotel" class="img-responsive" />
            </a>
        </div>
    </div>
    <div class="text-right">
        @Html.ActionLink("More","Hotel","Home" , new { area = "" })
        <span class="u-icon-arr"></span>
    </div>
</div>

<div class="container">
    <div class="row">
        <h2 class="text-center">Why choose us</h2>
        <div class="col-md-4">
            <h3 class="text-center">Fast</h3>
            <p>Easily to find hotels by price, location or room type.</p>
        </div>
        <div class="col-md-4">
            <h3 class="text-center">Book Worry-free</h3>
            <p>Thousands of our hotels offer free cancellation</p>
        </div>
        <div class="col-md-4">
            <h3 class="text-center">24/7 Customer Support</h3>
            <p>We're here to help whenever you need us</p>
        </div>
    </div>
</div>
